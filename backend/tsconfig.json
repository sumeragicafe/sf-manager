{
  "compilerOptions": {
    "module": "ESNext",           // ou "NodeNext"
    "target": "ES2020",           // ou outro target compatÃ­vel
    "baseUrl": ".",                   // ðŸ‘ˆ Define 'src' como raiz
    "paths": {
      "@infra/*": ["src/infra/*"],
      "@domain/*": ["src/domain/*"],
      "@interface/*": ["src/interface/*"],
      "@usecases/*": ["src/usecases/*"],
      "@routes/*": ["src/routes/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["src", "main.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  }
}
