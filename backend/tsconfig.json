{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@infra/*": ["src/infra/*"],
      "@domain/*": ["src/domain/*"],
      "@interface/*": ["src/interface/*"],
      "@usecases/*": ["src/usecases/*"],
      "@routes/*": ["src/routes/*"]
    },
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "main.ts"]
}